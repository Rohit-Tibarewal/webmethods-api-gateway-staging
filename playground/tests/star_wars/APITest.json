{
	"info": {
		"_postman_id": "15ece0cc-bace-4df7-a2bf-7e77ed7cfc31",
		"name": "API Test for star-wars",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get all films",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Correct first film title\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data.allFilms.films[0].title).to.eql(\"A New Hope\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Host",
						"value": "{{api-hostname}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "graphql",
					"graphql": {
						"query": "query Query {\r\n  allFilms {\r\n    films {\r\n      title\r\n      director\r\n      releaseDate\r\n      speciesConnection {\r\n        species {\r\n          name\r\n          classification\r\n          homeworld {\r\n            name\r\n          }\r\n        }\r\n      }\r\n    }\r\n  }\r\n}",
						"variables": ""
					}
				},
				"url": {
					"raw": "https://{{api-ip}}:{{api-port}}/gql/StarWarsDemoAPI/1",
					"protocol": "https",
					"host": [
						"{{api-ip}}"
					],
					"port": "{{api-port}}",
					"path": [
						"gql",
						"StarWarsDemoAPI",
						"1"
					]
				}
			},
			"response": []
		}
	]
}